{
  "openapi": "3.0.0",
  "info": {
    "title": "Digital Industry Backend API",
    "version": "1.0.0",
    "description": "API for TICS, OCR, and Supply Chain Traceability"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1"
    }
  ],
  "paths": {
    "/ocr/upload": {
      "post": {
        "summary": "Upload a document for OCR",
        "tags": ["OCR"],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Document uploaded successfully"
          }
        }
      }
    },
    "/ocr/documents/{id}": {
      "get": {
        "summary": "Get document details and OCR status",
        "tags": ["OCR"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Document details"
          }
        }
      }
    }
  }
}